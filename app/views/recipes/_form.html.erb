<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  Title: <%= f.text_field :title %>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>
    Name: <%= i.text_field :name %>
    <%= i.label :quantity %>
    Quantity: <%= i.text_field :quantity %>
  <% end %>
  <%= f.submit %>
<% end %>
